# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page

POST /invalidateToken				controllers.WhatAmIDoingController.invalidateToken(token: String)
GET  /publishVideo 					controllers.WhatAmIDoingController.publishVideo(token: String)
GET  /whatamidoing					controllers.WhatAmIDoingController.whatAmIdoing(invitedId: String)
POST /invite 						controllers.WhatAmIDoingController.invite(token: String, email: String)
GET  /webjars/*file                 controllers.WebJarAssets.at(file)

POST /registerLogin				        controllers.WhatAmIDoingController.registerLogin(email: Option[String], password: Option[String], firstName: Option[String], lastName: Option[String])
# Obtain require.js with built-in knowledge of how webjars resources can be

# resolved
GET     /lib/require.js             controllers.WebJarAssets.requirejs()

# Enable webjar based resources to be returned
GET     /webjars/*file              controllers.WebJarAssets.at(file)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
